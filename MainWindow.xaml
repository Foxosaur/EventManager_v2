<Window
    x:Class="WPF_test.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_test"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Event Manager v2"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" />
                    <MenuItem Click="LoadEVTFile_Click" Header="_Open" />
                    <MenuItem Header="_Save" />
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
            </Menu>
            <TextBox AcceptsReturn="True" />
            <DataGrid
                Name="moomin"
                Width="472"
                Height="295"
                AlternatingRowBackground="#FFEFADAD"
                AutoGenerateColumns="False"
                RenderTransformOrigin="0.5,0.5"
                RowBackground="#FF67A579"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding ID, UpdateSourceTrigger=PropertyChanged}" Header="ID" />
                    <DataGridTextColumn Binding="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" Header="Notes" />
                    <DataGridTextColumn Binding="{Binding TypeFunction, UpdateSourceTrigger=PropertyChanged}" Header="Type" />
                    <DataGridTextColumn Binding="{Binding Function, UpdateSourceTrigger=PropertyChanged}" Header="Function" />
                    <DataGridTextColumn Binding="{Binding FunctionParams, UpdateSourceTrigger=PropertyChanged}" Header="Values" />
                </DataGrid.Columns>

            </DataGrid>
            <Button
                Width="58"
                Height="19"
                Click="Button_Click"
                Content="Save" />
        </DockPanel>
    </Grid>
</Window>
